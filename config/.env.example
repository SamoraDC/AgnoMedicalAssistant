# Application Settings
APP_NAME=AgnoMedicalAssistant
APP_VERSION=0.1.0
DEBUG=true
ENVIRONMENT=development

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Security
SECRET_KEY=your-secret-key-change-in-production-use-long-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Groq API Configuration
GROQ_API_KEY=your-groq-api-key-here
GROQ_MODEL=llama-3.3-70b-versatile
GROQ_TEMPERATURE=0.1
GROQ_MAX_TOKENS=8000

# Langfuse Observability (Optional)
LANGFUSE_PUBLIC_KEY=your-langfuse-public-key
LANGFUSE_SECRET_KEY=your-langfuse-secret-key
LANGFUSE_HOST=https://cloud.langfuse.com
LANGFUSE_ENABLED=false

# RAG Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
VECTOR_DB_PATH=.data/vector_store.db
CHUNK_SIZE=500
CHUNK_OVERLAP=50
TOP_K_RESULTS=5

# OCR Configuration
OCR_ENGINE=pymupdf
# TESSERACT_CMD=/usr/bin/tesseract  # Uncomment and set path if needed
OCR_LANGUAGES=eng+por

# File Upload
MAX_FILE_SIZE_MB=10
UPLOAD_DIR=.data/uploads

# Agent Configuration
AGENT_MAX_RETRIES=3
AGENT_TIMEOUT_SECONDS=60

# Database
DUCKDB_PATH=.data/medical_assistant.db

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
